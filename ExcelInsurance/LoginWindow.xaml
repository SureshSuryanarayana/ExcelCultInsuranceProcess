<Window x:Class="ExcelInsurance.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelInsurance"
        mc:Ignorable="d"
        Title="ExcelCult" Height="450" Width="600" FontSize="16" WindowStartupLocation="CenterScreen">
    <Border Margin="20">
        <StackPanel>
            <TextBlock Text="ExcelCult" FontSize="50" FontWeight="UltraBold" HorizontalAlignment="Center"/>
            <Separator/>
            <TextBlock Text="Please login here" HorizontalAlignment="Center" Margin="0 10 0 0"/>

            <Border BorderThickness="2" BorderBrush="Black" CornerRadius="10" Margin="100 5" Padding="30">
                <StackPanel>
                    <TextBlock Text="Username"/>
                    <TextBox x:Name="txt_username" Padding="3" Margin="0 0 0 5"/>
                    <TextBlock Text="Password"/>
                    <PasswordBox x:Name="txt_password" Padding="3" Margin="0 0 0 5"/>
                    <Button x:Name="btn_login" Click="Btn_login_Click" Padding="3" Content="Login" Margin="60 0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
